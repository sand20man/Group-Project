<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Dashboard</title>
  <link rel="stylesheet" href="/public/styles/main.css"> <!-- Link to your main CSS file -->
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <div class="container">
      <div class="profile-card">
        <img src="/images/profile.jpg" alt="Profile Picture" class="profile-pic">
        <h2><%= user.name %></h2>
        <p><%= user.email %></p>
        <div class="profile-info">
          <div class="info-item">
            <i class="fas fa-user"></i>
            <p>Profile Settings</p>
          </div>
          <div class="info-item">
            <i class="fas fa-calendar-alt"></i>
            <p>Joined <%= user.joinedAt %></p>
          </div>
        </div>
        <a href="/profile/edit" class="btn btn-primary">Update Profile</a>
      </div>

      <div class="posts-card">
        <h2>My Service Posts</h2>
        <% posts.forEach(post => { %>
        <div class="post-item">
          <i class="fas fa-briefcase"></i>
          <div class="post-details">
            <h3><%= post.title %></h3>
            <p><%= post.description %></p>
            <p class="post-date">Posted <%= post.createdAt %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </main>

  <footer>
    <p>&copy; 2024 Community Service App. All Rights Reserved.</p>
  </footer>
</body>
</html>