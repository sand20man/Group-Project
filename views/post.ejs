<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Post a Service/Request</title>
  <link rel="stylesheet" href="/public/styles/main.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <div class="container">
      <h1>Post a Service/Request</h1>
      <form action="/submit-post" method="post" class="form">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" required>
        </div>
        <div class="form-group">
          <label for="post_type_id">Post Type: </label>
          <select id="post_type_id" name="post_type_id" required>
              <% types.forEach(type => { %>
                  <option value="<%= type.type_id %>"><%= type.type_name %></option>
              <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description:</label><br>
          <textarea id="description" name="description" rows="5" required></textarea>
        </div>
        <div class="form-group">
          <label for="price">Price: </label>
          <input type="number" id="price" name="price" required></input>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </main>

  <footer>
    <p>&copy; 2024 Community Service App. All Rights Reserved.</p>
  </footer>
</body>
</html>