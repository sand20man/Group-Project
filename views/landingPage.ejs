        /* Additional CSS for the pop-up and tabs */
        .popup {
            display: block; /* Show the pop-up by default */
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .popup-overlay {
            display: block; /* Show the overlay by default */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        .close-btn {
            cursor: pointer;
            color: #ff0000;
            font-weight: bold;
            float: right;
            font-size: 20px;
        }

        .tabs {
            display: flex;
            margin-top: 20px;
            cursor: pointer;
        }

        .tab {
            flex: 1;
            padding: 10px;
            text-align: center;
            background-color: #f0f0f0;
            border: 1px solid #ddd;
            transition: background-color 0.3s;
        }

        .tab.active {
            background-color: #0077cc;
            color: #fff;
        }

        .tab-content {
            display: none;
            border: 1px solid #ddd;
            padding: 10px;
        }

        .tab-content.active {
            display: block;
        }
        table {
            width: 100%; /* Make the table take the full width of its container */
            border-collapse: collapse; /* Optional: for better spacing of table cells */
            margin-top: 20px; /* Optional: adds spacing above the table */
        }

        th, td {
            padding: 10px; /* Adds padding to the table cells */
            text-align: left; /* Aligns the text to the left */
            border: 1px solid #ddd; /* Adds a light border for the table cells */
        }

        th {
            background-color: #f4f4f4; /* Adds a background color for the header */
        }

    </style>
</head>
